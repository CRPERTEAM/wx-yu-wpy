
  <view class="index-container">
    <view class="tab-view" hidden="{{currentTab != 0}}">
      
  <view class="index-home">
    <swiper indicator-dots="{{$home$indicatorDots}}" class="swiper" autoplay="{{$home$autoplay}}" interval="{{$home$interval}}" duration="{{$home$duration}}" indicator-active-color="{{$home$indicatorActiveColor}}">
      <block  wx:for="{{$home$imgUrls}}" wx:key="index">
        <swiper-item class="swiper-item">
          <image src="{{item}}" mode="aspectFill" class="slide-image"/>
        </swiper-item>
      </block>
    </swiper>

    <div class="middle">
      <view bindtap="$home$toGoodsList" class="btn-to-goods" data-wpytogoodslist-a="">挑选商品</view>
    </div>

    <div class="bottom">
      这里可以放些介绍或者是活动
    </div>
  </view>

    </view>
    <view class="tab-view" hidden="{{currentTab != 1}}">
      
  <view class="order-container">
    
  <view class="order-tab">
    <view  wx:for="{{$order$orderTab$items}}" wx:for-index="index" wx:key="index" class="tab-item {{$order$orderTab$active === index ? 'active' : ''}}" bindtap="$order$orderTab$change" data-wpychange-a="{{index}}">
      {{item.title}}
    </view>
  </view>


    <!-- <view class="list-1" wx:if="active === 0">
      <view wx:for="{{list1}}">

      </view>
    </view> -->

    
  <scroll-view scroll-y class="order-list" wx:if="{{$order$active === 0}}">
    <view  wx:for="{{$order$orderListA$list}}" wx:for-key="item" wx:for-index="index" class="item" wx:key="index">
      <view class="header">
        <view class="left">{{item.title}}</view>
        <view class="right {{item.status !== 0 ? 'no-pay' : ''}}">{{$order$orderListA$payStatus[item.status]}}</view>
      </view>
      <view class="content">
        <view class="items">马铃薯1斤 + 番茄2斤</view>
        <view class="price">￥{{item.price}}</view>
      </view>
      <view class="time">{{item.createTime}}</view>
      <view class="btn" bindtap="$order$orderListA$toDetail" data-wpytodetail-a="{{item.id}}">查看详情</view>
    </view>
  </scroll-view>


    
  <scroll-view scroll-y class="order-list" wx:if="{{$order$active === 1}}">
    <view  wx:for="{{$order$orderListB$list}}" wx:for-key="item" wx:for-index="index" class="item" wx:key="index">
      <view class="header">
        <view class="left">{{item.title}}</view>
        <view class="right {{item.status !== 0 ? 'no-pay' : ''}}">{{$order$orderListB$payStatus[item.status]}}</view>
      </view>
      <view class="content">
        <view class="items">马铃薯1斤 + 番茄2斤</view>
        <view class="price">￥{{item.price}}</view>
      </view>
      <view class="time">{{item.createTime}}</view>
      <view class="btn" bindtap="$order$orderListB$toDetail" data-wpytodetail-a="{{item.id}}">查看详情</view>
    </view>
  </scroll-view>


    
  <view class="blank-tip" wx:if="{{($order$active === 0 && $order$list1.length === 0) || $order$active === 1 && $order$list2.length === 0}}">
    <i class="iconfont {{$order$blankTip$icon}}"/>
    <view class="msg" v-if="msg">
      {{$order$blankTip$msg}}
    </view>
  </view>

  </view>

    </view>
    <view class="tab-view" hidden="{{currentTab != 2}}">
      
  <view class="mine-container">
    
  <view class="mine-header">
    <view class="userinfo">
      <image class="userinfo-avatar" src="{{$mine$mineHeader$userInfo.avatarUrl}}" background-size="cover"/>
      <text class="userinfo-nickname">{{$mine$mineHeader$userInfo.nickName}}</text>
    </view>
  </view>

    
  <view class="mine-list">
    <view class="list-item"  wx:for="{{$mine$mineList$items}}" wx:key="index" bindtap="$mine$mineList$toPath" data-wpytopath-a="{{item.path}}">
      <i class="iconfont {{item.icon}}" style="{{item.style}}"/>
      <span class="title">{{item.title}}</span>
      <view class="can-jump" wx:if="{{item.path}}"/>
    </view>
  </view>

  </view>

    </view>
    
  <view class="tab tab">
    <view  wx:for="{{$tabbar$items}}" wx:for-index="id" wx:key="id" class="tab-item {{$tabbar$active === id ? 'active' : ''}}" bindtap="$tabbar$change" data-wpychange-a="{{id}}">
      <i class="iconfont {{ item.icon }}"/>
      <text class="title">{{ item.title }}</text>
    </view>
  </view>

  </view>