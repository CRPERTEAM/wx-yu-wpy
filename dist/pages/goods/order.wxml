
  <view class="goods-order-container">
    <view class="address-wrapper" bindtap="toAddrEdit">
      <view class="address">
        <label class="text">浙江省舟山市XX小区xx号</label>
        <view class="can-jump"/>
      </view>
      <view class="others">
        <label class="name">一横</label>
        <label class="tel">13512341234</label>
      </view>
    </view>

    <view class="content">
      <view class="section">
        <radio-group class="radio-group" bindchange="radioChange">
          <label class="item"  wx:for="{{items}}">
            <radio value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
          </label>
        </radio-group>
      </view>
      <view class="section">
        <view class="list">
          <view class="item"  wx:for="{{list}}" wx:for-index="index" wx:for-key="index">
            <view class="left">
              <view class="title">
                {{ item.title }}
              </view>
              <view class="desc">
                {{ item.desc }}
              </view>
            </view>
            <view class="num">
              ×{{ item.num }}
            </view>
            <view class="price">
              ￥{{ item.price }}
            </view>
          </view>
        </view>
        <view class="total">
          <label>合计：</label>
          <label class="total-price">￥{{ totalPrice }}</label>
        </view>
      </view>

      <view class="section">
        <!-- 备注 -->
      </view>
    </view>

    <view class="bottom">
      支  付
    </view>
  </view>